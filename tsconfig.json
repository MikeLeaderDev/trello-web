{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "allowJs": true,
    "noEmit": true,            //prevent TS from writing output files
    "resolveJsonModule": true,
    "types": ["vite/client"]
  },
  "include": ["src"]
}
